<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="192dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_bar_height"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:layout_marginTop="50dp"
                        android:text="Activity_title"
                        android:textColor="@color/colorWhite"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/detail_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:layout_marginTop="8dp"
                        android:text="@string/paper_subtitle"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/details_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.10" />

                    <LinearLayout
                        android:id="@+id/details_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="hello World" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/app_bar_height"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/title_texts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:text="@string/paper_details_title"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/font_edit_med_small" />

                            </LinearLayout>

                            <!--Start of Details Fields Style
                            to be replaced by edit view-->

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/colorPrimary" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/date_icon"
                                android:layout_width="@dimen/icon_edit_large"
                                android:layout_height="@dimen/icon_edit_large"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_calendar"
                                android:tint="@color/colorBlack" />

                            <LinearLayout
                                android:id="@+id/date_texts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/date_icon"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/font_edit_med_small" />

                                <TextView
                                    android:id="@+id/date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date_sentence"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/font_edit_small_small" />
                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/light_gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/time_icon"
                                android:layout_width="@dimen/icon_edit_large"
                                android:layout_height="@dimen/icon_edit_large"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_clock"
                                android:tint="#000" />

                            <LinearLayout
                                android:id="@+id/time_texts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/time_icon"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TIME:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/font_edit_med_small" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/start_time_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/start_time"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/font_edit_small_small" />

                                    <TextView
                                        android:id="@+id/end_time_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:text="@string/end_time"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/font_edit_small_small" />

                                    <TextView
                                        android:id="@+id/middle_time_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40dp"
                                        android:text="-"
                                        android:textSize="@dimen/font_edit_small_small" />

                                </RelativeLayout>

                            </LinearLayout>


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/light_gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/reminder_icon"
                                android:layout_width="@dimen/icon_edit_large"
                                android:layout_height="@dimen/icon_edit_large"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_action_alarm"
                                android:tint="@color/colorBlack" />

                            <LinearLayout
                                android:id="@+id/reminder_texts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/reminder_icon"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="REMINDER:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/font_edit_large" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/reminder_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/reminder"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/font_edit_small_small" />

                                    <TextView
                                        android:id="@+id/reminder_message"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="MINUTES BEFORE EVENT"
                                        android:textSize="@dimen/font_edit_small_small" />


                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/details_note"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:hint="Notes to Remember..."
                            android:textSize="@dimen/font_edit_small_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.10" />

                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/details_activity_edit_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:src="@drawable/ic_action_pencil"
        android:tint="@color/colorWhite"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom|left|end" />

</android.support.design.widget.CoordinatorLayout>
